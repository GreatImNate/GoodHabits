<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/good_habit_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Good Habit (Name)"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp" />

    <CheckBox
        android:id="@+id/check_sunday_gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:layout_below="@+id/good_habit_name_edit"
        android:layout_alignStart="@+id/check_thursday_gh" />

    <CheckBox
        android:id="@+id/check_monday_gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:layout_below="@+id/good_habit_name_edit"
        android:layout_toEndOf="@+id/check_thursday_gh" />

    <CheckBox
        android:id="@+id/check_tuesday_gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/check_monday_gh"
        android:layout_toEndOf="@+id/check_monday_gh"
        android:text="Tuesday" />

    <CheckBox
        android:id="@+id/check_wednesday_gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/good_habit_name_edit"
        android:layout_toEndOf="@+id/check_tuesday_gh"
        android:text="Wednesday" />

    <CheckBox
        android:id="@+id/check_thursday_gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:layout_below="@+id/check_sunday_gh"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <CheckBox
        android:id="@+id/check_friday_gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:layout_alignBaseline="@+id/check_thursday_gh"
        android:layout_alignBottom="@+id/check_thursday_gh"
        android:layout_toEndOf="@+id/check_thursday_gh" />

    <CheckBox
        android:id="@+id/check_saturday_gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:layout_below="@+id/check_tuesday_gh"
        android:layout_toEndOf="@+id/check_monday_gh" />

    <EditText
        android:id="@+id/good_habit_description_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Good Habit (Description)"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/check_saturday_gh"/>

    <!--todo: have fields for classification-->


</RelativeLayout>